<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="About the Old-Line Primitive Baptist Hymn and Tune Book"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="\nI compiled this hymn-and-tune book for Primitive Baptist churches and others of like precious faith.  I tried to include a large variety of sound texts that would be edifying to God's people.  I also tried to provide tunes that fit the texts and are easy for congregations to sing.\n\nThe hymnal contains 847 hymns set to about 200 tunes in shape-note notation.\n\nThis electronic edition allows personal use in situations where a bulky book is not convenient, but I do not advocate introducing a distracting electronic device into public worship.\n"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/aboutlink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="For more information, visit http://olpbhtb.com."
            android:clickable="true"
            android:autoLink="web"
            android:linksClickable="true"
            android:textSize="18sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>